<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyLangApp.Languages.ChineseCourses">
    <StackLayout Margin="20, 20, 20, 0">
        <Label Text="CHINESE COURSES"
               FontSize="Large"
               TextColor="Black"
               HorizontalOptions="Center"/>
        
        <Button Text="LEVEL 1"
                FontSize="Title"
                BackgroundColor="Crimson"
                x:Name="chilevel1"
                Margin="15"
                HorizontalOptions="Center"
                Clicked="chilevel1_Clicked"/>
        
        <Button Text="LEVEL 2"
                FontSize="Title"
                BackgroundColor="Crimson"
                x:Name="chilevel2"
                Margin="15"
                HorizontalOptions="Center"/>
        <Button Text="LEVEL 3"
                FontSize="Title"
                BackgroundColor="Crimson"
                x:Name="chilevel3"
                Margin="15"
                HorizontalOptions="Center"/>
    </StackLayout>
</ContentPage>