<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyLangApp.Languages.JapaneseCourses">
    <StackLayout Margin="20, 20, 20, 0">
        <Label Text="JAPANESE (日本語) COURSES"
               FontSize="Title"
               TextColor="Crimson"
               HorizontalOptions="Center"/>
        
        <Button Text="LEVEL 1"
                FontSize="Title"
                TextColor="White"
                BackgroundColor="Salmon"
                x:Name="japlevel1"
                Margin="15"
                HorizontalOptions="Center"
                Clicked="japlevel1_Clicked"/>
        
        <Button Text="LEVEL 2"
                FontSize="Title"
                TextColor="White"
                BackgroundColor="Salmon"
                x:Name="japlevel2"
                Margin="15"
                HorizontalOptions="Center"
                Clicked="japlevel2_Clicked"/>
        
            <Button Text="LEVEL 3"
                    FontSize="Title"
                    TextColor="White"
                BackgroundColor="Salmon"
                x:Name="japlevel3"
                Margin="15"
                HorizontalOptions="Center"
                    Clicked="japlevel3_Clicked"/>
    </StackLayout>
</ContentPage>