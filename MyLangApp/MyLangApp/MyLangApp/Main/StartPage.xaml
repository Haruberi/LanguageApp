<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyLangApp.Main.StartPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Japanese"
                     Clicked="ToolbarItemJapanese_Clicked"/>
    </ContentPage.ToolbarItems>
    <StackLayout Margin="20, 20, 20, 0">
        <Label Text="Choose which language you would like to learn!"
               FontSize="Medium"
               TextColor="Black"
               HorizontalOptions="Center"/>
        <Button Text="JAPANESE"
                BackgroundColor="Crimson"
                x:Name="japanese"
                Margin="15"
                HorizontalOptions="Center"
                Clicked="japanese_Clicked"/>
        <Button Text="CHINESE"
                BackgroundColor="Crimson"
                x:Name="chinese"
                Margin="15"
                HorizontalOptions="Center"
                Clicked="chinese_Clicked"/>
        <Button Text="KOREAN"
                BackgroundColor="Crimson"
                x:Name="korean"
                Margin="15"
                HorizontalOptions="Center"
                Clicked="korean_Clicked"/>
    </StackLayout>
</ContentPage>